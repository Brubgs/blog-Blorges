<h1>{{categoria.nome}}</h1>
{{#each postagens}}
<div class="card mt-4">
    <div class="card-body">
        <h3>{{titulo}}</h3>
        <p>{{descricao}}</p>
        <a href="/postagem/{{slug}}"><button class="btn btn-primary">Leia mais</button></a>
        <hr>
        <div class="d-flex flex-column">
            <small>Categoria: {{categoria.nome}}</small> 
            <small>Data de publicação: {{categoria.date}}</small>
        </div>
        
    </div>
</div>

{{else}}
    <h5>Nenhuma postagem</h5>
{{/each}}