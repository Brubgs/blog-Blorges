<h1>Lista de postagens</h1>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-primary">Nova postagem</button></a>

{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body d-flex flex-column">
            <h4>{{titulo}}</h4>
            <p>Descrição: {{descricao}}</p>
            <small>Data: {{data}}</small>
            <small>Categoria: {{categoria.nome}}</small>
            <div>
                <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success mt-4">Editar postagem</button></a>
                
                <a href="/admin/postagens/deletar/{{_id}}"><button class="btn btn-danger mt-4">Deletar postagem</button></a>
            </div>
        </div>
    </div>

{{else}}
    <p class="mt-2">Nenhuma postagem registrada</p>
{{/each}}